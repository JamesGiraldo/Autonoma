<% breadcrumb :user_password_edit, @user %>
<div class="container">
  <%= simple_form_for current_user, url: update_password_user_path , class:"formularioedit" do |f| %>
      <div class="row">
        <div class="col-12">
          <%= f.button :submit, "Actualizar datos", class: "float-right actualizar  btn btn-primary btn-lg" %>
        </div>
      </div>
      <div class="row eso">
         <div class="col-md-6">
            <div class="form-group">
              <div class="row">
                 <div class="col-4">
                   <% if current_user.perfil? %>
                        <%= image_tag current_user.perfil.url(:thumb), class: " text-center img" , title: "Mi Perfil" %>
                        <h2 class=" titulo-Narajanja"><%= current_user.username%> </h2>&nbsp;
                     <%else%>
                        <%= image_tag 'nophoto' , class: " text-center imghome circlo"%>
                        <h2 class=" titulo-Narajanja"><%= current_user.username%> </h2>&nbsp;
                   <%end%>
                 </div>
                 <div class="col-8">
                   <div class="container">
                     <%= f.input :password,label: "Nueva Contraseña:",hint: "Deje los campos de contraseñas vacios si no desea actualizarla",required: false,input_html: { autocomplete: "new-password" , class: "form-control" } %>
                     <%= f.input :password_confirmation,label: "Confirmar Nueva Contraseña:", hint: "Asegurece que coincida la contraseña" ,required: false,input_html: { autocomplete: "new-password" , class: "form-control" } %>
                     <%= f.input :current_password,label: "Contraseña Actual:", hint: "Se necesita su contraseña actual para confirmar",required: true,input_html: { autocomplete: "current-password" , class: "form-control" } %>
                   </div>
                 </div>
              </div>
            </div>
         </div>
      </div>
  <% end %>
</div>
