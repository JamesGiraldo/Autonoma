<div class="container down">
  <!-- Modal HTML Markup -->
  <div id="myModal" class="modal fade">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
          <button  type="button" class="close" data-dismiss="modal" aria-hidden="true">X</button>
        </div>
        <div class="modal-body">
          <%= simple_form_for @comentario, remote: true, html: { class: 'form-horizontal' } do |f| %>
            <%= f.input :titulo , autofocus: true, placeholder:"Titulo" , autocomplete: "nombre" %>
                <%= f.input :descripccion, :as => :text, placeholder:"Descripcion" , :input_html => { 'rows' => 8, 'cols' => 80 } %>
            <%= f.button :submit, "Registrar Comentario",  class: "btn-primary block full-width m-b" %>
          <% end %>
        </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
  </div><!-- /.modal -->
</div>
