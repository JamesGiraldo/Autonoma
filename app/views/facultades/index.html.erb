<% breadcrumb :facultades %>
<div class="ibox-content m-b-sm border-bottom buscador-complemnto">
  <div class="row">
    <div class="container">
      <h2 class="titulo-Narajanja">Facultades</h2>
    </div>
  </div>
  <div class="search-form">
    <%= form_tag(facultades_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div class="ibox-content m-b-sm border-bottom">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <tr>
        <th class="active">NOMBRE</th>
      </tr>
      <%= render partial: "facultades", collection: @facultades, as: :facultad %>
    </table>
    <% unless @facultades.present? %>
       <tr>
          <h2 class="text-center">No Hay Informacion Solicitada</h2
       </tr>
    <%end%>
  </div>
</div>
<% if current_user.has_role? :Admin%>
  <div class="botonContainer">
    <div class="botonSeguimiento">
      <%= link_to "Nueva Facultad", new_facultad_path, class: "botonSeguimientoColor"%>
    </div>
  </div>
<%end%>
<hr><%= paginate @facultades, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
