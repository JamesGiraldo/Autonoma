<% breadcrumb :user_password_edit, @user %>
<div class="container">
  <%= simple_form_for current_user, url: update_password_user_path , html: { class: 'form-horizontal signupForm' } do |f| %>
      <div class="row">
        <div class="col-8">
          <h2 class="titulo-Narajanja">Actualizar Contraseña!</h2>
        </div>
        <div class="col-4">
          <%= f.button :submit, "Actualizar", class: "float-right actualizar  btn btn-primary btn-lg" %>
        </div>
      </div>
      <div class="row eso">
         <div class="col-12">
            <div class="form-group">
              <div class="row">
                 <div class="col-md-6">
                   <div class="card">
                     <div class="text-center card-body">
                       <% if current_user.perfil? %>
                            <%= image_tag current_user.perfil.url(:thumb), class: " text-center userperfil" , title: "Mi Perfil" %>
                            <h2 class=" titulo-Narajanja"><%= current_user.username%> </h2>
                         <%else%>
                            <%= image_tag 'nophoto' , class: " text-center imghome circlo"%>
                            <h2 class=" titulo-Narajanja"><%= current_user.username%> </h2>
                       <%end%>
                     </div>
                   </div>
                 </div>
                 <div class="col-md-6">
                   <div class="container">
                     <%= f.input :password,label: "Nueva Contraseña:", hint: "Deje los campos de contraseñas vacios si no desea actualizarla", id: "pasword", name:"password", class:"form-control"%>
                     <%= f.input :password_confirmation,label: "Confirmar Nueva Contraseña:", hint: "Asegurece que coincida la contraseña" , id:"confirm_password", name: "confirm_password" , class: "form-control" %>
                     <%= f.input :current_password,label: "Contraseña Actual:", hint: "Se necesita su contraseña actual para confirmar", name: "password", class: "form-control" %>
                   </div>
                 </div>
              </div>
            </div>
         </div>
      </div>
  <% end %>
</div>
