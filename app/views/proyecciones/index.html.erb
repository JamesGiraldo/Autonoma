<% breadcrumb :proyecciones %>
<div class="jumbotron buscador-complemnto">
  <div class="row">
    <div class="col-10">
        <h2 class="titulo-Narajanja">Proyecciones</h2>
    </div>
    <div class="col-2">
      <div class="botonContainer">
            <%= link_to "", new_proyeccion_path, remote:true , class: "fa fa-plus btn btn-primary"%>
      </div>
    </div>
  </div>
  <div class="search-form">
    <%= form_tag(proyecciones_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control Bucador input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover dataTables-example">
    <thead>
      <tr>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">NOMBRE</th>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">DESCRIPCION</th>
        <th class=" text-center footable-visible footable-first-column footable-sortable active">CREADA</th>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">MODIFICADA</th>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">LINEA</th>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">ACCIONES</th>
      </tr>
    </thead>
    <tbody>
      <%= render partial: "proyecciones", collection: @proyecciones, as: :proyeccion %>
    </tbody>
  </table>
  <% unless @proyecciones.present? %>
     <tr>
        <h2 class="text-center">No Hay Informacion Solicitada</h2
     </tr>
  <%end%>
</div><hr>
<div class="paginacion">
  <%= paginate @proyecciones, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
</div>
  <div id="new-proyeccion"></div>
  <div id="edit-proyeccion"></div>
