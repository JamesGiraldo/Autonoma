<% breadcrumb :programa_users, @programa %>
<div class="jumbotron buscador-complemnto">
  <div class="row">
    <div class="container">
      <h2 class="titulo-Narajanja">Usuarios del Programa <strong><%= @programa.nombre %></strong></h2>
    </div>
  </div>
  <div class="search-form">
    <%= form_tag(programa_users_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control Bucador input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover dataTables-example">
      <tr>
        <th class="active">DOCUMENTO</th>
        <th class="active">Email</th>
        <th class="active">NOMBRE</th>
        <th class="active">APELLIDO</th>
        <th class="active">TELEFONO</th>
        <th class="active">DIRECCION</th>
        <% if current_user.has_role? :Admin %>
          <th class="">ROL</th>
        <% end %>
      </tr>
      <%= render partial: "users", collection: @users, as: :user %>
    </table>
    <% unless @users.present? %>
      <tr>
          <h2 class="text-center">No Hay Informacion Solicitada</h2
      </tr>
    <%end%>
</div><hr>
<div class="paginacion">
  <%= paginate @users, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
</div>
