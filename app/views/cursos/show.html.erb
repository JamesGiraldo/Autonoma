<% breadcrumb :curso_show, @curso %>
<h1 class="text-center titulo-Narajanja">CURSO<strong><%= @curso.nombre %></strong></h1><hr />
<div class="usuario">
  <div class="informacion">
    <div class="container_details">
      <div class="info">
         <p class="details_info"><strong>Nombre: </strong> <%=  @curso.nombre %></p>
         <p class="details_info"><strong>linea: </strong> <%=  @curso.linea.nombre %></p>
         <p class="details_info"><strong>Esatdo: </strong> <%= @curso.estado ? "UAC" : "EXTERNO"%></p>
      </div>
      <% if current_user.has_role? :Admin%>
        <div class="botonContainer">
          <div class="botonSeguimiento">
            <%= link_to "Editar Curso", edit_curso_path(@curso), remote:true,  class: "botonSeguimientoColor"%>
          </div>
          <div class="botonSeguimiento">
            <%= link_to 'Eliminar', { :action => :destroy, :id => @curso.id }, :method => :delete, :data => { :confirm => 'EstÃ¡s seguro? de Eliminar este Curso'} , class: "botonSeguimientoColor"%>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
<div id="edit-curso"></div>
