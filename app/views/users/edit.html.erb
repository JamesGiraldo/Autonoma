<% breadcrumb :user_edit, @user %>
<div class="container">
  <%= simple_form_for current_user, url: user_path , class:"formularioedit" do |f| %>
      <div class="row">
        <div class="col-md-12">
          <h2 class="text-center titulo-Narajanja">Editar datos de <%= current_user.nombre%> </h2>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12">
          <%= f.button :submit, "Actualizar datos", class: "float-right actualizar btn btn-primary btn-lg" %>
        </div>
      </div>
      <div class="row eso">
         <div class="col-md-6">
            <div class="form-group">
              <div class="row">
                 <div class="col-md-4">
                   <% if current_user.perfil? %>
                        <%= image_tag current_user.perfil.url(:thumb), class: "img" , title: "Mi Perfil" %>
                     <%else%>
                        <%= image_tag 'nophoto' , class: "imghome circlo"%>
                   <%end%>
                 </div>
                 <div class="col-md-8">
                   <%= f.input :perfil , class:"file"%>
                 </div>
              </div>
            </div>
            <div class="form-group ">
                <%= f.input :nombre, class: "form-control" %>
                <%= f.input :apellido, class: "form-control" %>
                <%= f.input :documento, class: "form-control" %>
            </div>
         </div>
         <div class="col-md-6">
           <div class="form-group">
              <%= f.input :telefono, class: "form-control" %>
              <%= f.input :direccion, class: "form-control" %>
              <%= f.input :descripcion, :as => :text, :input_html => { 'rows' => 9, 'cols' => 80 } %>
            </div>
         </div>
      </div>
  <% end %>
</div>
