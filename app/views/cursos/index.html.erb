<% breadcrumb :cursos %>
<h1 class="text-center titulo-Narajanja">LISTA DE <strong>CURSOS</strong></h1>
<hr />
<div class="ibox-content m-b-sm border-bottom">
  <div class="row">
    <div class="col-md-10">
        <h2 class="titulo-Narajanja">Cursos</h2>
    </div>
    <div class="col-md-2">
      <div class="input-group-btn">
        <div class="botonContainer">
            <%= link_to "", new_curso_path, remote:true , class: "fa fa-plus  btn btn-primary"%>
        </div>
      </div>
    </div>
  </div>
  <div class="search-form">
    <%= form_tag(cursos_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div class="ibox-content m-b-sm border-bottom">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <tr>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">Linea</th>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">Nombre</th>
        <th class=" text-center footable-visible footable-first-column footable-sortable active">Registrado</th>
        <th class="text-center  footable-visible footable-first-column footable-sortable active">Modificado</th>
        <!-- <th class="footable-visible footable-first-column footable-sortable active">Incribirse</th> -->
        <% if current_user.has_role? :Admin %>
          <th class="footable-visible footable-first-column footable-sortable text-center active">Acciones</th>
          <% else %>
        <% end %>
      </tr>
      <tbody>
        <%= render partial: "cursos", collection: @cursos, as: :curso %>
        <% unless @cursos.present? %>
           <tr>
              <h2 class="text-center">No Hay Informacion Solicitada</h2
           </tr>
        <%end%>
      </tbody>
    </table>
  </div>
</div><hr>
  <%= paginate @cursos, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
<div id="new-curso"></div>
<div id="edit-curso"></div><br><br>
