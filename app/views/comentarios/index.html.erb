<% breadcrumb :comentarios %>
<h1 class="text-center mov-naranja">LISTA DE <strong>COMENTARIOS</strong></h1>
<hr />
<div class="row">
  <%= form_tag(comentarios_path, class:"navbar-form-custom" , method: :get) do %>
    <div class="form-group">
      <input type="text" name="q" class="form-control" placeholder="Buscar..." type="text" value="<%= params[:q] %>">
    </div>
  <%end%>
</div><br>
<div class="ibox-content m-b-sm border-bottom">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <tr>
        <th class="active">ID</th>
        <th class="active">TITULO</th>
        <th class="active">DESCRIPCION</th>
        <th class="active">REGISTRADO</th>
        <th class="active">MODIFICADO</th>
        <th class="active">ACCIONES</th>
      </tr>
      <%= render partial: "comentarios", collection: @comentarios, as: :comentario %>
      </table>
      <% unless @comentarios.present? %>
         <tr>
            <h2 class="text-center">No Hay Informacion Solicitada</h2
         </tr>
      <%end%>
  </div>
</div>
<% if current_user.has_role? :Admin%>
  <div class="botonContainer">
    <div class="botonSeguimiento">
      <%= link_to "Nuevo Comentario", new_comentario_path, remote: true, class: "botonSeguimientoColor"%>
    </div>
  </div>
<%end%>
<hr><%= paginate @comentarios, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
<div id="new-comentario"></div>
<div id="edit-comentario"></div>
