<center><h1 class="mov-naranja">Inicia sesión en <strong>Autonoma</strong></h1></center>
<div class="container_session">
  <div class="session">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <p>Debe iniciar sesión o registrarse antes de continuar.<p>
      <%= f.input :email, placeholder:"Email",  autofocus: true, autocomplete: "email" %>
      <%= f.input :password, placeholder:"Contraseña",  autocomplete: "current-password" %>
      <% if devise_mapping.rememberable? %>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Recuérdame" %>
      <% end %>
      <%= f.button :submit, "Iniciar Sesion",  class: "btn-primary block full-width m-b" %>
      <a class="btn btn-sm btn-white btn-block" href="<%=new_user_registration_path%>">Crea una cuenta</a>
      <%= render "devise/shared/links" %>
    <% end %>
  </div>
</div>
