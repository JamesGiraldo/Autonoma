<% breadcrumb :lineas %>
<div class="jumbotron buscador-complemnto">
  <div class="row">
    <div class="col-10">
        <h2 class="titulo-Narajanja">Lineas</h2>
    </div>
    <div class="col-2">
      <% if current_user.has_role? :Admin %>
        <div class="botonContainer">
          <%= link_to "", new_linea_path, remote:true , class: "fa fa-plus  btn btn-primary"%>
        </div>
      <%end%>
    </div>
  </div>
  <div class="search-form">
    <%= form_tag(lineas_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control Bucador input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<% unless @lineas.present? %>
    <h2 class="text-center">No Hay Informacion Solicitada</h2>
<%end%>
<div class="row">
 <% @lineas.each do |linea| %>
  <div class="col-md-3">
    <div class="box card text-white bg-secondary mb-3 h-100">
      <div class="category-container">
        <div class="card-body">
          <%= link_to linea_cursos_path(linea) do %>
            <div class="description">
               <h1 class="card-title description_box"><%=linea.nombre%></h1>
            </div>
          <%end%>
          <div class="foot">
             <h1 class="description_box text-center"><%= linea.cursos.count%></h1>
          </div>
          <div class="card-footer">
            <% if current_user.has_role? :Admin %>
              <div class="row">
                <div class="col-6">
                  <div class="botonContainer">
                    <%= link_to edit_linea_path(linea), remote:true ,  class: "btn btn-warning" do %>
                      <%= fa_icon 'pencil-square-o' %>
                    <% end %>
                  </div>
                </div>
                <div class="col-6">
                  <div class="botonContainer">
                    <%= link_to linea_path(linea), method: :delete, data: {confirm: "Â¿Esta Seguro De Eliminar La Linea #{linea.nombre}?",
                                mensaje: 'La linea se borrara definitivamente'}, class: "btn btn-danger" do %>
                      <%= fa_icon 'trash' %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
 <%end%>
</div>
<div class="paginacion">
  <%= paginate @lineas, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
</div>
<div id="new-linea"></div>
<div id="edit-linea"></div>
