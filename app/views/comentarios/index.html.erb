<h1 class="text-center mov-naranja">LISTA DE <strong>COMENTARIOS</strong></h1>
<hr />
<div class="row">
  <%= form_tag(comentarios_path, class:"navbar-form-custom" , method: :get) do %>
    <div class="form-group">
      <input type="text" name="q" class="form-control" placeholder="Buscar..." type="text" value="<%= params[:q] %>">
    </div>
  <%end%>
</div><br>
<table class="table table-striped">
  <tr>
    <th class="active">ID</th>
    <th class="active">NOMBRE</th>
    <th class="active">DESCRIPCION</th>
  </tr>
  <%= render partial: "comentarios", collection: @comentarios, as: :comentario %>
</table>
