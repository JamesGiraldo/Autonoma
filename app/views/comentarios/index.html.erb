<% breadcrumb :comentarios %>
<div class="ibox-content m-b-sm border-bottom buscador-complemnto">
  <div class="row">
    <div class="col-md-10">
        <h2 class="titulo-Narajanja">Comentarios</h2>
    </div>
    <div class="col-md-2">
      <div class="input-group-btn">
        <div class="botonContainer">
            <%= link_to "", new_comentario_path, remote:true , class: "fa fa-plus  btn btn-primary"%>
          </div>
        </div>
      </div>
  </div>
  <div class="search-form">
    <%= form_tag(comentarios_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div class="ibox-content m-b-sm border-bottom">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <tr>
        <th class="active text-center">TITULO</th>
        <th class="active text-center">DESCRIPCION</th>
        <th class="active text-center">REGISTRADO</th>
        <th class="active text-center">MODIFICADO</th>
        <th class="active text-center">ACCIONES</th>
      </tr>
      <%= render partial: "comentarios", collection: @comentarios, as: :comentario %>
      </table>
      <% unless @comentarios.present? %>
         <tr>
            <h2 class="text-center">No Hay Informacion Solicitada</h2
         </tr>
      <%end%>
      <%= paginate @comentarios, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
  </div>
</div>
<% if current_user.has_role? :Admin%>
  <div class="botonContainer">
    <div class="botonSeguimiento">
      <%= link_to "Nuevo Comentario", new_comentario_path, remote: true, class: "botonSeguimientoColor"%>
    </div>
  </div>
<%end%><hr>
<div id="new-comentario"></div>
<div id="edit-comentario"></div>
