<h1 class="text-center titulo-Narajanja">Universidad <strong>Autonoma del caribe</strong></h1>
<h2 class="subtitulo titulo-Narajanja"><strong>Informacion</strong></h2>
<div class="usuario informacion_general">
  <div class="informacion ">
    <div class="container_picture">
      <%= link_to edit_user_path do %>
         <div class="picture">
           <% if current_user.perfil.present? %>
               <%= image_tag current_user.perfil.thumb.url%>
               <%else%>
               <p>Actualizar Perfil</p>
           <%end%>
         </div>
      <%end%>
    </div>
    <div class="container_details">
      <div class="col-md-6">
        <div class="info">
           <p class="details_info"><strong>Nombre:</strong> <%= current_user.nombre %> <%= current_user.apellido%></p>
           <p class="details_info"><strong>Rol:</strong> <%= current_user.roles.collect(&:name).join(' , ').upcase %></p>
           <p class="details_info"><strong>Documento:</strong> <%=  current_user.documento%></p>
           <p class="details_info"><strong>Correo:</strong> <%=  current_user.email %></p>
           <p class="details_info"><strong>Teléfono:</strong> <%=  current_user.telefono %></p>
        </div>
      </div>
      <div class="col-md-6">
        <% if current_user.programa.present? %>
            <p class="details_info"><strong>Programa:</strong> <%= current_user.programa.nombre %></p>
          <%else%>
            <p class="details_info"><strong>Programa:</strong>NULL</p>
        <% end %>
        <p class="details_info"><strong>Descripcion:</strong> <%=  current_user.descripcion %></p>
      </div>
    </div>
  </div>
  <div class="informacion_general">
    <div class="container_box">
      <div class="box card text-white bg-primary mb-3">
         <div class="title">
             <h3 class="title_box"><strong>Comentarios</strong></h3>
         </div>
         <div class="description">
             <h1 class="description_box"><%= current_user.comentarios.count%></h1>
         </div>
         <div class="foot">
             <h3 class="foot_box">Universidad Autonoma del caribe</h3>
         </div>
         <div class="ver_mas">
           <a class="<%= is_active_controller('comentarios') %>">
              <%= link_to comentarios_path do %>
                <i class="ver_mas_box"></i> <span data-i18n="nav.layouts">Ver más</span>
              <% end %>
           </a>
         </div>
      </div>
       <div class="box card text-white bg-secondary mb-3">
          <div class="title">
            <h3 class="title_box"><strong>Facultades</strong></h3>
          </div>
          <div class="description">
            <h1 class="description_box"><%= Facultad.count %></h1>
          </div>
          <div class="foot">
            <h3 class="foot_box">Universidad Autonoma del caribe</h3>
          </div>
          <div class="ver_mas">
            <a class="<%= is_active_controller('facultades') %>">
               <%= link_to facultades_path do %>
                 <i class="ver_mas_box"></i> <span data-i18n="nav.layouts">Ver más</span>
               <% end %>
            </a>
          </div>
       </div>
       <div class="box card text-white bg-success mb-3 ">
          <div class="title">
              <h3 class="title_box"><strong>Cursos</strong></h3>
          </div>
          <div class="description">
              <h1 class="description_box"><%= Curso.count%></h1>
          </div>
          <div class="foot">
              <h3 class="foot_box">Universidad Autonoma del caribe</h3>
          </div>
          <div class="ver_mas">
            <a class="<%= is_active_controller('cursos') %>">
               <%= link_to cursos_path do %>
                 <i class="ver_mas_box"></i> <span data-i18n="nav.layouts">Ver más</span>
               <% end %>
            </a>
          </div>
       </div>
       <div class="box card bg-info">
         <div class="title">
            <h3 class="title_box"><strong>Programas</strong></h3>
         </div>
         <div class="description">
            <h1 class="description_box"><%= Programa.count%></h1>
         </div>
         <div class="foot">
            <h3 class="foot_box">Universidad Autonoma del caribe</h3>
         </div>
         <div class="ver_mas">
           <a class="<%= is_active_controller('users') %>">
              <%= link_to programas_path do %>
                <i class="ver_mas_box"></i> <span data-i18n="nav.layouts">Ver más</span>
              <% end %>
           </a>
         </div>
       </div>
       <div class="box card text-white bg-danger mb-3">
         <div class="title">
            <h3 class="title_box"><strong>Proyecciones</strong></h3>
         </div>
         <div class="description">
            <h1 class="description_box"><%= current_user.proyecciones.count%></h1>
         </div>
         <div class="foot">
            <h3 class="foot_box">Universidad Autonoma del caribe</h3>
         </div>
         <div class="ver_mas">
           <a class="<%= is_active_controller('users') %>">
              <%= link_to proyecciones_path do %>
                <i class="ver_mas_box"></i> <span data-i18n="nav.layouts">Ver más</span>
              <% end %>
           </a>
         </div>
       </div>
    </div>
  </div>
</div>
<div class="">
  <h2 class="subtitulo titulo-Narajanja"><strong>Cursos</strong></h2>
  <%= column_chart @cursos, stacked: true, colors: ["#fcae70"]%><br><br><br>
</div>
