<% if current_user.has_role? :decano %>
 <h2 class="subtitulo mov-naranja"><strong>Cursos Realizados</strong></h2><br>
  <div class="ibox-content m-b-sm border-bottom">
    <div class="table-responsive">
      <table class="table table-striped table-bordered table-hover dataTables-example">
        <tr>
          <th class="active">Nombre</th>
          <th class="active">Linea</th>
        </tr>
        <tr>
          <% @user.cursosUsuario.each do |curso_usuario| %>
              <tr>
                <td><%= link_to curso_usuario.nombre , cursos_usuario_path(curso_usuario.id)%></td>
                <td><%= curso_usuario.linea.nombre%></td>
              </tr>
           <%end%>
      </table>
    </div>
  </div>
  <% elsif current_user.has_role? :Admin %>
   <h2 class="subtitulo mov-naranja"><strong>Cursos Realizados</strong></h2><br>
    <div class="ibox-content m-b-sm border-bottom">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover dataTables-example">
          <tr>
            <th class="active">Nombre</th>
            <th class="active">Linea</th>
          </tr>
          <tr>
            <% @user.cursosUsuario.each do |curso_usuario| %>
                <tr>
                  <td><%= link_to curso_usuario.nombre , cursos_usuario_path(curso_usuario.id)%></td>
                  <td><%= curso_usuario.linea.nombre%></td>
                </tr>
             <%end%>
        </table>
      </div>
    </div>
<% end %>
