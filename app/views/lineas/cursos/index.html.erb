<% breadcrumb :cursos_linea, @linea %>
<h1 class="text-center mov-naranja">CURSOS DE LA LINEA<strong> <%= @linea.nombre.upcase%></strong></h1>
<hr />
<div class="row">
  <div class="col-md-10">
    <%= form_tag(cursos_path, class:"navbar-form-custom" , method: :get) do %>
      <div class="form-group">
        <input type="text" name="q" class="form-control" placeholder="Buscar..." type="text" value="<%= params[:q] %>">
      </div>
    <%end%>
  </div>
  <div class="col-md-2">
    <% if current_user.has_role? :Admin %>
      <div class="botonContainer">
        <div class="botonSeguimiento">
          <%= link_to "", new_curso_path, remote:true, class: "fa fa-plus"%>
        </div>
      </div>
    <%end%>
  </div>
</div><hr>
<div class="ibox-content m-b-sm border-bottom">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <tr>
        <th class="active">NOMBRE</th>
        <th class="active">LINEA</th>
        <th class="active">REGITRADO</th>
        <th class="active">MODIFICADO</th>
      </tr>
      <%= render partial: "cursos", collection: @cursos, as: :curso %>
    </table>
    <% unless @cursos.present? %>
       <tr>
          <h2 class="text-center">No Hay Informacion Solicitada</h2
       </tr>
    <%end%>
  </div>
</div>
<div id="new-curso"></div>
<div id="edit-curso"></div>
