<% breadcrumb :cursos_usuarios_linea, @linea %>
<h1 class="text-center mov-naranja">LISTA DE <strong>CURSOS POR OTRO LADO</strong> DE LA LINEA: <%= @linea.nombre %></h1>
<hr />
<div class="row">
  <div class="col-md-10">
    <%= form_tag(cursos_usuarios_path, class:"navbar-form-custom" , method: :get) do %>
      <div class="form-group">
        <input type="text" name="q" class="form-control" placeholder="Buscar..." type="text" value="<%= params[:q] %>">
      </div>
    <%end%>
  </div>
  <div class="col-md-2">
      <div class="botonContainer">
        <div class="botonSeguimiento">
          <%= link_to "", new_cursos_usuario_path, remote:true, class: "fa fa-plus"%>
        </div>
      </div>
  </div>
</div><hr>
<div class="ibox-content m-b-sm border-bottom">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
        <tr>
          <th class="active">Nombre</th>
          <th class="active">Linea</th>
        </tr>
        <tr>
          <% @cursos_usuarios.each do |curso_usuario| %>
              <tr>
                <td><%= curso_usuario.nombre %></td>
                <td><%= curso_usuario.linea.nombre%></td>
              </tr>
           <%end%>
           <% unless @cursos_usuarios.present? %>
              <tr>
                 <h2 class="text-center">No Hay Informacion Solicitada</h2
              </tr>
           <%end%>
      </table>
  </div>
</div>
<div id="new-curso"></div>
<div id="edit-curso"></div>
