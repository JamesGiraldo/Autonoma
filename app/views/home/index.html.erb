<h1 class="text-center titulo-Narajanja space">Universidad <strong>Autonoma del caribe</strong></h1>
<h2 class="subtitulo titulo-Narajanja"><strong>Informacion</strong></h2>
<div class="usuario informacion_general">
  <div class="informacion ">
    <div class="container_picture">
      <%= link_to edit_user_path do %>
         <div class="picture">
           <% if current_user.perfil? %>
                <%= image_tag current_user.perfil.url(:thumb), title: "Mi Perfil" %>
             <%else%>
                <%= image_tag 'nophoto' , class: "imghome"%>
           <%end%>
         </div>
      <%end%>
    </div>    
    <div class="container_details">
      <div class="col-md-6">
         <p class="details_info"><strong>Nombre:</strong> <%= current_user.nombre %> <%= current_user.apellido%></p>
         <p class="details_info"><strong>Rol:</strong> <span class="badge badge-primary show-badge-dark"><strong><%= current_user.roles.collect(&:name).join(' , ').upcase %></strong></span></p>
         <p class="details_info"><strong>Documento:</strong> <%=  current_user.documento%></p>
         <p class="details_info"><strong>Correo:</strong> <%=  current_user.email %></p>
      </div>
      <div class="col-md-6">
        <p class="details_info"><strong>Teléfono:</strong> <%= current_user.telefono %></p>
        <p class="details_info"><strong>Direccion:</strong> <%= current_user.direccion %></p>
        <p class="details_info"><strong>Programa:</strong> <%= current_user.programa.nombre %></p>
        <p class="details_info"><strong>Descripcion:</strong> <%= current_user.descripcion %></p>
      </div>
    </div>
  </div>
  <div class="informacion_general">
    <div class="container_box">
        <% unless current_user.has_role? :Docente %>
          <div class="box card text-white bg-primary mb-3">
             <div class="title">
                 <h5 class="title_box"><strong>Docentes</strong></h5>
             </div>
             <div class="description">
                 <h1 class="description_box"><%= @users %></h1>
             </div>
             <div class="foot">
                 <h3 class="foot_box">Universidad Autonoma del caribe</h3>
             </div>
             <div class="ver_mas">
               <a class="<%= is_active_controller('users') %>">
                  <%= link_to instructores_users_path do %>
                    <i class="ver_mas_box"></i> <span data-i18n="nav.layouts" data-toggle="tooltip" title="Todo Sobre Comentarios">Ver más</span>
                  <% end %>
               </a>
             </div>
          </div>
        <% end %>
        <div class="box card text-white bg-danger mb-3">
          <div class="title">
             <h5 class="title_box"><strong> Proyecciones</strong></h5>
          </div>
          <div class="description">
            <% if current_user.has_role? :Docente %>
                <h1 class="description_box"><%= current_user.proyecciones.count%></h1>
             <% elsif current_user.has_role? :Admin or current_user.has_role? :Director or current_user.has_role? :Vicerrector or current_user.has_role? :Decano %>
                <h1 class="description_box"><%= Proyeccion.count%></h1>
            <% end %>
          </div>
          <div class="foot">
             <h3 class="foot_box">Universidad Autonoma del caribe</h3>
          </div>
          <div class="ver_mas">
            <a class="<%= is_active_controller('proyecciones') %>">
               <%= link_to proyecciones_path do %>
                 <i class="ver_mas_box"></i> <span data-i18n="nav.layouts"  data-toggle="tooltip" title="Todas Las Proyecciones">Ver más</span>
               <% end %>
            </a>
          </div>
        </div>
        <div class="box card text-white bg-secondary mb-3">
          <div class="title">
             <h5 class="title_box"><strong>Proyecciones</strong></h5>
          </div>
          <div class="description">
              <h1 class="description_box"> <%= @porsentaje %>%</h1>
          </div>
          <div class="foot">
             <h3 class="foot_box">Universidad Autonoma del caribe</h3>
          </div>
          <div class="ver_mas">
            <a class="<%= is_active_controller('proyecciones') %>">
               <%= link_to proyecciones_path do %>
                 <i class="ver_mas_box"></i> <span data-i18n="nav.layouts"  data-toggle="tooltip" title="Todas Las Proyecciones">Ver más</span>
               <% end %>
            </a>
          </div>
        </div>
       <div class="box card text-white bg-success mb-3 ">
          <div class="title">
              <h5 class="title_box"><strong>Cursos</strong></h5>
          </div>
          <div class="description">
              <h1 class="description_box"><%= Curso.count%></h1>
          </div>
          <div class="foot">
              <h3 class="foot_box">Universidad Autonoma del caribe</h3>
          </div>
          <div class="ver_mas">
            <a class="<%= is_active_controller('cursos') %>">
               <%= link_to cursos_path do %>
                 <i class="ver_mas_box"></i> <span data-i18n="nav.layouts"  data-toggle="tooltip" title="Todo Sobre Cursos">Ver más</span>
               <% end %>
            </a>
          </div>
       </div>
       <div class="box card text-white bg-warning mb-3">
          <div class="title">
            <h5 class="title_box"><strong>Facultades</strong></h5>
          </div>
          <div class="description">
            <h1 class="description_box"><%= Facultad.count %></h1>
          </div>
          <div class="foot">
            <h3 class="foot_box">Universidad Autonoma del caribe</h3>
          </div>
          <div class="ver_mas">
            <a class="<%= is_active_controller('facultades') %>">
               <%= link_to facultades_path do %>
                 <i class="ver_mas_box"></i> <span data-i18n="nav.layouts"  data-toggle="tooltip" title="Todo Sobre Facultades">Ver más</span>
               <% end %>
            </a>
          </div>
       </div>
       <div class="box card bg-info">
         <div class="title">
            <h5 class="title_box"><strong>Programas</strong></h5>
         </div>
         <div class="description">
            <h1 class="description_box"><%= Programa.count%></h1>
         </div>
         <div class="foot">
            <h3 class="foot_box">Universidad Autonoma del caribe</h3>
         </div>
         <div class="ver_mas">
           <a class="<%= is_active_controller('programas') %>">
              <%= link_to programas_path do %>
                <i class="ver_mas_box"></i> <span data-i18n="nav.layouts"  data-toggle="tooltip" title="Todos Los Programas">Ver más</span>
              <% end %>
           </a>
         </div>
       </div>
    </div>
  </div>
</div>
<div class="">
  <h2 class="subtitulo titulo-Narajanja"><strong>Lineas</strong></h2>
  <div class="salto">
    <%= column_chart @lineas, stacked: true, colors: ['#fcae70'], dataLabels: {
      style: {colors: ['#4c4c54']}
    }%>
  </div>
</div>
