<h1 class="text-center mov-naranja">LISTA DE <strong>Proyecciones</strong></h1>
<hr />
<div class="row">
  <%= form_tag(proyecciones_path, class:"navbar-form-custom" , method: :get) do %>
    <div class="form-group">
      <input type="text" name="q" class="form-control" placeholder="Buscar..." type="text" value="<%= params[:q] %>">
    </div>
  <%end%>
</div><br>
<table class="table table-striped">
  <tr>
    <th class="active">NOMBRE</th>
    <th class="active">Descripcion</th>
  </tr>
  <%= render partial: "proyecciones", collection: @proyecciones, as: :proyeccion %>
</table>
<% unless @proyecciones.present? %>
   <tr>
      <h2 class="text-center">No Hay Informacion Solicitada</h2
   </tr>
<%end%>
  <div class="botonContainer">
    <div class="botonSeguimiento">
      <%= link_to "Nueva Proyeccion", new_proyeccion_path, class: "botonSeguimientoColor"%>
    </div>
  </div>
