<% breadcrumb :users %>
<div class="jumbotron buscador-complemnto">
    <h2 class="titulo-Narajanja"><strong>Usuarios</strong></h2>
  <div class="search-form">
    <%= form_tag(users_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control Bucador input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div class="">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
      <thead>
        <tr>
          <th class="">DOCUMENTO</th>
          <th class="">NOMBRE</th>
          <th class="">APELLIDO</th>
          <th class="">EMAIL</th>
          <th class="">TELEFONO</th>
          <th class="">DIRECCION</th>
          <th class="">PROGRAMA</th>
          <th class="">FACULTAD</th>
          <% if current_user.has_role? :Admin %>
            <th>ROL</th>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <%= render partial: "users", collection: @users, as: :user %>
      </tbody>
    </table>
      <% unless @users.present? %>
         <tr>
            <h2 class="text-center">No Hay Informacion Solicitada</h2
         </tr>
      <%end%>
  </div>
</div><hr />
<div class="paginacion">
  <%= paginate @users, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
</div>
