<% breadcrumb :proyecciones %>
<br><div class="ibox-content m-b-sm border-bottom">
  <div class="row">
    <div class="col-md-10">
        <h2>Proyecciones</h2>
    </div>
    <div class="col-md-2">
      <div class="input-group-btn">
        <div class="botonContainer">
            <%= link_to "", new_proyeccion_path, remote:true , class: "fa fa-plus  btn btn-primary"%>
          </div>
        </div>
      </div>
  </div>
  <div class="search-form">
    <%= form_tag(proyecciones_path, method: :get) do %>
      <div class="input-group">
        <input type="text" name="q" class="form-control input-lg" placeholder="Buscar..." type="text" value="<%= params[:q] %>"></input>
        <div class="input-group-btn">
          <button class="btn btn-lg btn-primary" type="submit">Buscar</button>
        </div>
      </div>
    <%end%>
  </div>
</div>
<div class="ibox-content m-b-sm border-bottom">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example">
        <tr>
          <th class="active">NOMBRE</th>
          <th class="active">Descripcion</th>
          <th class="active">Creada</th>
          <th class="active">Modificada</th>
          <th class="active">Acciones</th>
        </tr>
        <%= render partial: "proyecciones", collection: @proyecciones, as: :proyeccion %>
      </table>
      <% unless @proyecciones.present? %>
         <tr>
            <h2 class="text-center">No Hay Informacion Solicitada</h2
         </tr>
      <%end%>
  </div>
</div>
<%= paginate @proyecciones, :theme => 'twitter-bootstrap-3',:pagination_class => "pagination float-right" %>
  <div id="new-proyeccion"></div>
  <div id="edit-proyeccion"></div>
