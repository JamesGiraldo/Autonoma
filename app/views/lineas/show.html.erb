<% breadcrumb :linea_show, @linea %>
<h1 class="text-center mov-naranja">LINEA<strong> <%= @linea.nombre %></strong></h1><hr />
<div class="usuario">
  <div class="informacion">
    <div class="container_picture">
      <div class="picture">
         <% if @linea.avatar.thumb.present?%>
            <%= image_tag @linea.avatar.thumb, alt: "Imagen de Linea"%>
          <%end%>
       </div>
    </div>
    <div class="container_details">
      <div class="info">
         <p class="details_info"><strong>Nombre:</strong> <%= @linea.nombre %></p>
      </div>
      <% if current_user.has_role? :Admin%>
        <div class="botonContainer">
          <div class="botonSeguimiento">
            <%= link_to "Editar Linea", edit_linea_path(@linea), remote: true, class: "botonSeguimientoColor"%>
          </div>
          <div class="botonSeguimiento">
            <%= link_to 'Eliminar', { :action => :destroy, :id => @linea.id }, :method => :delete, :data => { :confirm => 'EstÃ¡s seguro? de Eliminar esta linea'} , class: "botonSeguimientoColor"%>
          </div>
        </div>
      <%end%>
    </div>
  </div>
</div>
<div id="new-linea"></div>
<div id="edit-linea"></div>
